<web-app>

  <display-name>Office-o-tron</display-name>
  <description>See http://www.probatron.org/officeotron.html</description>

  <context-param>
    <param-name>temp-folder</param-name>
    <param-value>C:\officeotron</param-value>
    <description>Where the non-web portions of the application are located</description>
  </context-param>

  <context-param>
    <param-name>max-upload</param-name>
    <param-value>500000</param-value>
    <description>The base URL of the web application</description>
  </context-param>
  
  <context-param>
    <param-name>ooxml-schema-base</param-name>
    <param-value>http://localhost:8080/29500T/</param-value>
    <description>Where the OOXML schemas can be found</description>
  </context-param>
  
  <context-param>
    <param-name>unzip-invocation</param-name>
    <param-value>cmd /c unzip</param-value>
    <description>How to invoke info-zip unzip executable on the command line</description>
  </context-param>

  <servlet>
    <servlet-name>validator</servlet-name>
    <description>Synchronous validation of POSTED documents</description>
    <servlet-class>org.probatron.officeotron.ValidatorServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>validator</servlet-name>
    <url-pattern>/validator</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

</web-app>
